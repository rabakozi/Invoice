@model IEnumerable<Invoice.Model.Invoice>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <span>@Html.ActionLink("Create Header", "CreateHeader") | </span>
    <span>@Html.ActionLink("Create Item", "CreateItem")</span>
</p>
<table class="table">
    <tr>
        <th>
            Invoice ID
        </th>
        <th>
            Date
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

@foreach (var invoice in Model.OrderBy(i => i.Id)) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => invoice.Id)
        </td>
        <td>
            @if (invoice.Date != DateTime.MinValue)
            {
                @Html.DisplayFor(modelItem => invoice.Date)
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => invoice.Address)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @Html.ActionLink("Details", "Details", new { invoiceId = invoice.Id })
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
